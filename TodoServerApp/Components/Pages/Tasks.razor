@page "/"
@rendermode InteractiveServer
@inject IDataService data
@attribute [Authorize]
<PageTitle>Задачи</PageTitle>

<h1>Мои задачи</h1>

<div class="container">
	@if (tasks == null) // если данные не загружены, то прописываем "Loading"
	{
		<tr>
			<td colspan="5">Loading...</td>
		</tr>
	}
	else
	{
		<div class="card-group">
			@foreach (var task in tasks) // если объект tasks не пустой, перебираем в цикле
			{
				<div class="card">
					<div class="card-header">
						@task.Title
					</div>
					<div class="card-body">
						<p>@task.Description</p>
						<p>@task.CreatedDate</p>
					</div>

				</div>
			}
		</div>
	}
</div>
@code {
	IEnumerable<TaskItem>? tasks;

	protected override async Task OnInitializedAsync()
	{
		await base.OnInitializedAsync();
		tasks = await data.GetTaskItemAsync();
	}
}
